<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>a_indexSectionPage</param-name>
        <param-value>login.jsp</param-value>
    </context-param>
    <context-param>
        <param-name>a_indexNavPage</param-name>
        <param-value>mainMenu.jsp</param-value>
    </context-param>
    <context-param>
        <param-name>a_sqlServer</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <param-name>a_database</param-name>
        <param-value>oc</param-value>
    </context-param>
    <servlet>
        <servlet-name>LoginCheck</servlet-name>
        <servlet-class>main.LoginCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAdd</servlet-name>
        <servlet-class>main.UserAdd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDel</servlet-name>
        <servlet-class>main.UserDel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAdd2</servlet-name>
        <servlet-class>main.UserAdd2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginCheck</servlet-name>
        <url-pattern>/LoginCheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAdd</servlet-name>
        <url-pattern>/UserAdd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDel</servlet-name>
        <url-pattern>/UserDel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAdd2</servlet-name>
        <url-pattern>/UserAdd2</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
